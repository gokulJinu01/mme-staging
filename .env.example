# MME (Memory Management Engine) Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Required: OpenAI API Key for AI-powered tag extraction
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=<set in deployment secret store>

# Required: JWT Secret for authentication (generate with: openssl rand -base64 64)
JWT_SECRET=<generate_64_bytes_base64>

# Required: MongoDB Root Password (strong 32+ characters)
MONGODB_ROOT_PASSWORD=<strong_32+_chars>

# Optional: Redis Password (strong 32+ characters)
REDIS_PASSWORD=<strong_32+_chars>

# Optional: Grafana Admin Password
GRAFANA_PASSWORD=<strong_password>

# Optional: CORS Configuration
# For production: restrict to specific domains
# For development: use * (wildcard)
CORS_ALLOWED_ORIGINS=*

# Optional: Environment (dev/prod)
ENV=dev

# Optional: Debug Mode (disable in production)
ENABLE_DEBUG=false

# Optional: Service Configuration
ENABLE_TAGGING_SERVICE=true
LOG_LEVEL=INFO

# Optional: MME Algorithm Parameters
MME_MAX_EDGES_PER_TAG=32
MME_MAX_DEPTH=2
MME_BEAM_WIDTH=128
MME_MAX_SEED_TAGS=5
MME_DECAY_ALPHA=0.85
MME_MIN_ACTIVATION=0.05
MME_TOKEN_BUDGET=20480
MME_DIVERSITY_LAMBDA=0.15
MME_RECENCY_TAU_DAYS=60
MME_CACHE_TTL_SECS=300

# Optional: Edge Learning Parameters  
MME_LEARN_ETA=0.05
MME_LEARN_R=0.03
MME_LEARN_D=0.01
MME_LEARN_WMAX=1.0
MME_LEARN_WINDOW_HOURS=24
